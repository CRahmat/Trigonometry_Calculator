<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:background="@drawable/app_background"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        >

        <RelativeLayout
            android:id="@+id/input_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textAlignment="center"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KALKULATOR ILMIAH"
                android:textAlignment="center"
                android:textSize="30dp"
                android:fontFamily="@font/typo_draft"
                android:textColor="#000000"
                >
            </TextView>
            <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:inputType="number"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:hint="INPUT NUMBER"
                android:textAlignment="center"
                android:fontFamily="@font/young_agency_regular"
                android:textStyle="bold"
                android:textSize="30dp"
                >

            </EditText>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            >
            <Button
                android:id="@+id/bttn_sin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sin"
                android:background="@drawable/custom_bttn"

                >
            </Button>
            <Button
                android:id="@+id/bttn_cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cos"
                android:background="@drawable/custom_bttn"
                android:layout_toRightOf="@id/bttn_sin"
                android:layout_marginLeft="10dp"
                >
            </Button>
            <Button
                android:id="@+id/bttn_tan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tan"
                android:textAlignment="center"
                android:background="@drawable/custom_bttn"
                android:layout_toRightOf="@id/bttn_cos"
                android:layout_marginLeft="10dp"
                >
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/bttn_cosec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cosec"
                android:background="@drawable/custom_bttn"

                >
            </Button>
            <Button
                android:id="@+id/bttn_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sec"
                android:background="@drawable/custom_bttn"
                android:layout_toRightOf="@id/bttn_cosec"
                android:layout_marginLeft="10dp"
                >
            </Button>
            <Button
                android:id="@+id/bttn_ctg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ctg"
                android:textAlignment="center"
                android:background="@drawable/custom_bttn"
                android:layout_toRightOf="@id/bttn_sec"
                android:layout_marginLeft="10dp"
                >
            </Button>
        </RelativeLayout>
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:layout_below="@+id/layout_2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/young_agency_regular"
            >

        </TextView>
    </RelativeLayout>

</RelativeLayout>